{
  "log_level": "all",
  "max_lines_per_file": {
    "enabled": true,
    "warning": 300,
    "error": 500
  },
  "pmd_duplicates": {
    "enabled": true,
    "minimum_tokens": 100,
    "exclude_patterns": {
      "python": [
        "__pycache__/**",
        "*.pyc",
        "venv/**",
        ".venv/**",
        "*venv/**",
        "env/**",
        ".git/**"
      ]
    }
  },
  "ruff_analyze": {
    "enabled": true,
    "select": ["E", "F", "W"],
    "ignore": [],
    "exclude_patterns": ["venv/**", "__pycache__/**", ".git/**"]
  }
}
